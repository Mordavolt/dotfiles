;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = #202020
background-alt = #0B0E11
foreground = #b2b2b2
foreground-alt = #ee3333
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
trans = #DA292b2e
white = #eee
grey = #0B0E11
pink = #B5138D
blue = #255CBF
purple = #7A18B5
ltblue= #16A88B
green = #27B817
red = #B50F3C
orange= #B5781A
yellow = #B5AA00

[bar/topbar]
monitor = ${env:MONITORT:DP1-3}
width = 100%
height = 33
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 4
padding-right = 4

module-margin-left = 1
module-margin-right = 1

font-0 = FontAwesome
font-1 = PT-Sans:pixelsize=9;0

modules-left = i3
modules-center = music 
modules-right = bitcoin ada volume battery wlan memory cpu xkeyboard date 
tray-position = right

[bar/rightbar]
inherit = bar/topbar
monitor = ${env:MONITORR:DP2-1}

modules-left = i3
modules-center = 
modules-right = date time 

[bar/leftbar]
inherit = bar/topbar
monitor = ${env:MONITORL:DP1-2}

modules-left = i3
modules-center = 
modules-right = date time 

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}

[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-scroll = false

format = <label-state>

label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 1

label-focused-foreground = ${colors.green}
label-focused-padding = 1

label-visible-foreground = ${colors.yellow}
label-visible-padding = 1 

label-urgent-foreground = ${colors.orange}
label-urgent-padding = 1 

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.red}
label = %percentage%%


[module/memory]
type = internal/memory
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.orange}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5

date = "%d.%m.%Y"
date-alt = " %Y.%m.%d"

time = %H:%M
time-alt = %H:%M

format-prefix-foreground = #E5C078
;format-underline = #0a6cf5

label = %date% %time%

[module/wlan]
type = internal/network
interface = wlp59s0
interval = 5

format-connected = <ramp-signal> <label-connected>
ramp-signal-0 = 
ramp-signal-foreground = ${colors.yellow} 
label-connected = %essid%

format-disconnected = <label-disconnected>
label-disconnected =  no-wifi

[module/volume]
type = internal/alsa

; mapping = true

format-volume = <ramp-volume> <label-volume>
ramp-volume-foreground = ${colors.ltblue}
ramp-volume-0 = 
label-volume = %percentage%%

format-muted = %{F#255CBF}%{F-} <label-muted>
label-muted = mut

[module/battery]
interval = 5
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 =  
ramp-capacity-4 =  
ramp-capacity-framerate = 750
ramp-capacity-foreground = ${colors.green}

[module/music]
type = custom/script
interval = 1

label = %output:0:45:...%
exec = ~/.config/polybar/mpris.sh

[module/bitcoin]
type = custom/script
interval = 60
format = <label>
label-maxlen = 9
label-ellipsis = false
tail = true
format-prefix = " "
format-prefix-foreground = ${colors.purple}
exec = ~/.config/polybar/btc.sh

[module/ada]
type = custom/script
interval = 60
format = <label>
label-maxlen = 9
label-ellipsis = false
tail = true
format-prefix = "₳ "
format-prefix-foreground = ${colors.blue}
exec = ~/.config/polybar/ada.sh

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
